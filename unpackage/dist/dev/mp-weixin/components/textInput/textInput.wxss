/* uni.scss */
.replyStyle {
  box-sizing: border-box;
  width: 100%;
  position: fixed;
  z-index: 99999999;
}
.inputBox {
  width: 520rpx;
  border-radius: 10rpx;
}
.textarea {
  background-color: #f3f4f6;
  margin: 0 25rpx;
  padding: 15rpx;
  border-radius: 10rpx;
}
.imgchoose {
  position: absolute;
  bottom: 100%;
  height: 200rpx;
  width: 100%;
  background-color: #fff;
  left: 0;
}
.imgBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
}
.imgBox .imgBox-item {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.imgBox .imgBox-item .imgBox-img {
  padding: 5rpx;
  width: 180rpx;
  height: 180rpx;
}
.closeIcon {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #fff;
}

